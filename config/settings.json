  },
  
  "performance": {
    "lazyLoadImages": true,
    "enableCaching": true,
    "minifyAssets": true,
    "enableGzip": true,
    
    "timeouts": {
      "apiRequest": 30000,
      "imageLoad": 10000,
      "pageLoad": 5000
