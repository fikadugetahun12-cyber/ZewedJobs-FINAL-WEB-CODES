  "analytics": {
    "enabled": true,
    "provider": "google-analytics",
    "trackingId": "UA-XXXXX-Y",
    
    "events": {
      "pageView": true,
      "buttonClick": true,
      "formSubmit": true,
      "fileDownload": true,
      "error": true
    },
    
    "privacy": {
      "anonymizeIp": true,
      "respectDoNotTrack": true
    }
  },
  
  "security": {
    "password": {
      "minLength": 8,
      "requireUppercase": true,
      "requireLowercase": true,
      "requireNumbers": true,
      "requireSpecialChars": true,
      "expiryDays": 90,
      "historyCount": 5
    },
    
    "session": {
      "timeout": 3600,
      "refreshInterval": 300,
      "maxConcurrentSessions": 3
    },
    
    "cors": {
      "allowedOrigins": [
        "https://mycompany.com",
        "https://app.mycompany.com",
        "http://localhost:3000",
        "http://localhost:8080"
      ],
      "allowCredentials": true
    },
    
    "headers": {
      "xFrameOptions": "DENY",
      "contentSecurityPolicy": "default-src 'self'",
      "strictTransportSecurity": "max-age=31536000"
    }
  },
  
  "logging": {
    "level": "info",
    "console": true,
    "remote": false,
    "remoteEndpoint": "/api/logs",
    
    "levels": {
      "error": true,
      "warn": true,
      "info": true,
      "debug": false,
      "trace": false
    }
  },
  
  "cache": {
    "enabled": true,
    "strategy": "localStorage",
    "ttl": 3600000,
    
    "keys": {
      "userProfile": "user_profile",
      "appSettings": "app_settings",
      "recentSearches": "recent_searches",
      "favorites": "user_favorites"
    }
  },
  
