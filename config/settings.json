{
  "$schema": "./config-schema.json",
  "version": "1.0.0",
  "environment": "development",
  
  "application": {
    "name": "Business Intelligence Dashboard",
    "version": "2.5.0",
    "copyright": "¬© 2024 MyCompany Inc.",
    "supportEmail": "support@mycompany.com",
    "timezone": "UTC",
    "locale": "en-US",
    "dateFormat": "YYYY-MM-DD",
    "timeFormat": "HH:mm:ss",
    "currency": "USD",
    "decimalSeparator": ".",
    "thousandsSeparator": ",",
    "itemsPerPage": 25,
    "autoSaveInterval": 30000,
    "sessionTimeout": 3600000,
    "maxUploadSize": 10485760,
    "supportedFileTypes": [".jpg", ".png", ".pdf", ".doc", ".docx", ".xls", ".xlsx", ".csv"]
  },
  
  "api": {
    "baseURL": "https://api.mycompany.com/v1",
    "timeout": 30000,
    "retryAttempts": 3,
    "retryDelay": 1000,
    "authType": "jwt",
    
    "endpoints": {
      "auth": {
        "login": "/auth/login",
        "logout": "/auth/logout",
        "refresh": "/auth/refresh",
        "register": "/auth/register",
        "forgotPassword": "/auth/forgot-password",
        "resetPassword": "/auth/reset-password"
      },
      "users": {
        "profile": "/users/profile",
        "update": "/users/update",
        "list": "/users",
        "details": "/users/{id}",
        "create": "/users",
        "delete": "/users/{id}"
      },
      "payments": {
        "initiate": "/payments/initiate",
        "verify": "/payments/verify/{id}",
        "history": "/payments/history",
        "refund": "/payments/{id}/refund"
      },
      "reports": {
        "generate": "/reports/generate",
        "list": "/reports",
        "download": "/reports/{id}/download"
      }
    },
    
    "headers": {
      "Content-Type": "application/json",
      "Accept": "application/json",
      "X-Application-Version": "2.5.0"
    }
  },
  
  "features": {
    "enabled": {
      "multiLanguage": true,
      "darkMode": true,
      "offlineMode": true,
      "pushNotifications": true,
      "analytics": true,
      "exportData": true,
      "importData": true,
      "aiAssistance": true,
      "voiceCommands": true,
      "screenSharing": true,
      "videoCalls": true
    },
    
    "flags": {
      "beta": ["aiAssistance", "voiceCommands"],
      "experimental": ["screenSharing", "videoCalls"],
      "requiresAuth": ["exportData", "importData", "aiAssistance"]
    },
    
    "limits": {
      "maxParticipants": 10,
      "maxFileSize": 10485760,
      "maxHistoryDays": 365,
      "maxExportRows": 100000,
      "concurrentUploads": 3
    }
  },
  
