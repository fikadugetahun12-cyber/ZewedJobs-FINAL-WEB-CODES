#!/bin/bash

# Function to convert a file:// URL to a valid file path for the current system
get_local_path() {
    local url=$1
    local path="${url#file://}"
    
    # Check if the path exists as is
    if [ -f "$path" ]; then
        echo "$path"
        return 0
    fi
    
    # Try to convert from Windows path to Unix path (for Git Bash/Cygwin)
    # Replace backslashes with forward slashes
    path=$(echo "$path" | sed 's/\\/\//g')
    
    # If the path starts with a drive letter (e.g., C:/), convert to /c/
    if [[ "$path" =~ ^[A-Za-z]:/ ]]; then
        drive=$(echo "${path:0:1}" | tr '[:upper:]' '[:lower:]')
        path="/${drive}${path:2}"
    fi
    
    # Check again
    if [ -f "$path" ]; then
        echo "$path"
        return 0
    else
        echo ""
        return 1
    fi
}

# Create directories
mkdir -p assets/images/logos
mkdir -p assets/images/icons
mkdir -p assets/images/videos

# Declare an associative array of files to copy/download
declare -A files=(
    ["assets/images/logos/telebirr.svg"]="file:///C:/Users/Dell5000/AppData/Local/Temp/178dec52-ded7-466a-a54a-42b4d781ce50_compressed.zip.e50/TeleBirr-Logo.svg"
    ["assets/images/logos/cbe.png"]="YOUR_CBE_LOGO_URL"
    ["assets/images/logos/paypal.png"]="YOUR_PAYPAL_LOGO_URL"
    ["assets/images/logos/visa-mastercard.svg"]="file:///C:/Users/Dell5000/AppData/Local/Temp/e1393681-98bb-4bda-918a-20446bc4ea15_compressed.zip.a15/212-2128435_master-e-visa-png-vi.svg"
    ["assets/images/logos/zewedjobs.svg"]="file:///C:/Users/Dell5000/Downloads/zewedjobs%20LOGO.svg"
    ["assets/images/icons/search.svg"]="file:///C:/Users/Dell5000/AppData/Local/Temp/ab92dac6-d8a6-4afa-8130-8be5e1ffb13a_compressed.zip.13a/search.svg"
)

echo "Setting up assets directories and files..."

for dest in "${!files[@]}"; do
    src="${files[$dest]}"
    
    # Skip placeholder URLs
    if [[ "$src" == YOUR_* ]]; then
        echo "Skipping $dest (placeholder URL)"
        continue
    fi
    
    # Handle file:// URLs
    if [[ "$src" == file://* ]]; then
        local_path=$(get_local_path "$src")
        if [ -n "$local_path" ]; then
            echo "Copying $local_path to $dest"
            cp "$local_path" "$dest"
        else
            echo "Warning: Source file for $dest not found at $src"
        fi
    # Handle http:// and https:// URLs
    elif [[ "$src" == http://* || "$src" == https://* ]]; then
        echo "Downloading $src to $dest"
        curl -L -o "$dest" "$src" 2>/dev/null || echo "Failed to download $src"
    else
        echo "Warning: Unknown source type for $dest: $src"
    fi
done

echo "Done."
