# Create CSS bundler script
cat > bundle-css.sh << 'EOF'
#!/bin/bash

# CSS Bundler for Zewed Jobs
# Combines all CSS into single files for production

echo "üì¶ Bundling CSS files..."

# Create development bundle (unminified)
cat > css/bundle.css << 'BUNDLE'
/* Zewed Jobs CSS Bundle - Development Version */
/* Generated: $(date) */

/* 1. Theme Variables */
$(cat css/themes/zewed-theme.css)

/* 2. Main Styles */
$(sed '1,2d' css/main.css)  # Remove @import lines

/* 3. Payment Styles */
$(cat css/payment.css)

/* 4. AI Chat Styles */
$(cat css/ai-chat.css)
BUNDLE

# Create minified version (requires clean-css-cli)
if command -v cleancss &> /dev/null; then
    cleancss -o css/bundle.min.css css/bundle.css
    echo "‚úÖ Created: css/bundle.min.css"
else
    echo "‚ö†Ô∏è  Install clean-css-cli for minification: npm install -g clean-css-cli"
fi

echo "‚úÖ Bundle created: css/bundle.css"
echo ""
echo "üìä File sizes:"
du -h css/*.css | sort -h
EOF

chmod +x bundle-css.sh

echo ""
echo "üéâ All CSS files created successfully!"
echo ""
echo "üìÅ Directory structure created:"
find css -type f -name "*.css" | sort
echo ""
echo "üöÄ Next steps:"
echo "1. Open example.html in your browser to see the design"
echo "2. Run ./bundle-css.sh to create production bundles"
echo "3. Include CSS in your HTML:"
echo "   <link rel=\"stylesheet\" href=\"css/main.css\">"
echo "   <link rel=\"stylesheet\" href=\"css/payment.css\">"
echo "   <link rel=\"stylesheet\" href=\"css/ai-chat.css\">"
echo "   <link rel=\"stylesheet\" href=\"css/responsive.css\">"
echo ""
echo "üì¶ Or use the bundle for production:"
echo "   <link rel=\"stylesheet\" href=\"css/bundle.min.css\">"
echo "   <link rel=\"stylesheet\" href=\"css/responsive.css\">"
